#include <Wire.h>
#include <Adafruit_Sensor.h>
#include <Adafruit_BME680.h>
#include "rm67162.h"

Adafruit_BME680 bme;

void setup() {
  Serial.begin(115200);
  while (!Serial);

  Serial.println("Booting...");

  // I2C for BME680
  Wire.begin(2, 3); // SDA=2, SCL=3

  if (!bme.begin(0x76)) {
    Serial.println("BME680 not found!");
    while (1);
  }

  Serial.println("BME680 detected!");

  bme.setTemperatureOversampling(BME680_OS_8X);
  bme.setHumidityOversampling(BME680_OS_2X);
  bme.setPressureOversampling(BME680_OS_4X);
  bme.setIIRFilterSize(BME680_FILTER_SIZE_3);
  bme.setGasHeater(320, 150);

  // Init display
  rm67162_init();
  lcd_setRotation(1);
  lcd_brightness(0xD0);
  lcd_fill(0, 0, TFT_WIDTH, TFT_HEIGHT, 0x0000);

  Serial.println("Display init done");
}

void loop() {
  if (!bme.performReading()) {
    Serial.println("BME680 reading failed!");
    return;
  }

  // Serial debug output
  Serial.print("Temp: "); Serial.print(bme.temperature); Serial.println(" *C");
  Serial.print("Hum: "); Serial.print(bme.humidity); Serial.println(" %");
  Serial.print("Press: "); Serial.print(bme.pressure / 100.0); Serial.println(" hPa");
  Serial.print("Gas: "); Serial.print(bme.gas_resistance / 1000.0); Serial.println(" KOhms");
  Serial.println("---------------------------");

  // Screen output
  lcd_fill(0, 0, TFT_WIDTH, TFT_HEIGHT, 0x0000);

  char buf[32];
  sprintf(buf, "Temp: %.2f C", bme.temperature);
  lcd_drawText(10, 30, buf, 0xF800, 0x0000, 2);

  sprintf(buf, "Hum: %.2f %%", bme.humidity);
  lcd_drawText(10, 70, buf, 0x07E0, 0x0000, 2);

  sprintf(buf, "Press: %.2f hPa", bme.pressure/100.0);
  lcd_drawText(10, 110, buf, 0x001F, 0x0000, 2);

  sprintf(buf, "Gas: %.2f KOhms", bme.gas_resistance/1000.0);
  lcd_drawText(10, 150, buf, 0xFFE0, 0x0000, 2);

  delay(2000);
}
